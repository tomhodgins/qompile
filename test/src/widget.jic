/* Widget Container Queries */
${containerQuery('.widget', el => 100 <= el.offsetWidth && el.offsetWidth < 200, `
  :self.widget {
    background: red;
  }
`)}

${containerQuery('.widget', el => 200 <= el.offsetWidth && el.offsetWidth < 300, `
  :self.widget {
    background: orange;
  }
`)}

${containerQuery('.widget', el => 300 <= el.offsetWidth && el.offsetWidth < 400, `
  :self.widget {
    background: yellow;
  }
`)}

${containerQuery('.widget', el => 400 <= el.offsetWidth && el.offsetWidth < 500, `
  :self.widget {
    background: lime;
  }
`)}

${containerQuery('.widget', el => 500 <= el.offsetWidth && el.offsetWidth < 600, `
  :self.widget {
    background: blue;
  }
`)}

${containerQuery('.widget', el => 600 <= el.offsetWidth && el.offsetWidth < 700, `
  :self.widget {
    background: indigo;
  }
`)}

${containerQuery('.widget', el => 700 <= el.offsetWidth, `
  :self.widget {
    background: purple;
  }
`)}